<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyFirstMAUIApp.Model.Entities"
             x:Class="MyFirstMAUIApp.View.CollectionPage"
             Title="Collection Page">
    <VerticalStackLayout>

        <CollectionView x:Name="CollectionsPageList"
                        ItemsSource="{Binding MarvelMoviesCollection}">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"/>
            </CollectionView.ItemsLayout>


            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:MarvelMovies">

                    <Grid Padding="2">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackLayout Orientation="Horizontal">
                            <StackLayout>
                                <Label Text="{Binding NameofMovie}" />
                            </StackLayout>
                        </StackLayout>

                    </Grid>

                </DataTemplate>

            </CollectionView.ItemTemplate>
            
        </CollectionView>
        
        
    </VerticalStackLayout>
</ContentPage>
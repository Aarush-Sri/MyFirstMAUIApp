<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMAUIApp.View.SLiderPageVM"
             Title="SliderPageVM">
    <VerticalStackLayout>

        <BoxView WidthRequest="400"
                HeightRequest="50"
                Color="Black"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0, 0, 0, 0"
                Opacity="{Binding Opacity}"/>

        <Slider Minimum="0" Maximum="1" Value="{Binding Opacity}"
                ThumbColor="Black" MaximumTrackColor="Black" MinimumTrackColor="Black"
                HorizontalOptions="Fill" />


        <Label FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Label Text="{Binding Text}" FontAttributes="Bold" FontSize="Medium" TextColor="Black" HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMAUIApp.View.AddCollectionPage"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- Label for movie title input -->
        <Label Text="Movie Title"
               FontAttributes="Bold"
               FontSize="Large"
               TextColor="Black" />

        <!-- Entry for typing in the movie title -->
        <Entry x:Name="MovieTitle" 
               Placeholder="Enter Movie Title"
               FontAttributes="Bold"
               FontSize="Large"
               TextColor="Blue"
               HorizontalOptions="Fill"
               Text="{Binding MovieName, Mode=TwoWay}" />

        <!-- Save button with proper command suffix -->
        <Button x:Name="saveBtn"
                Text="Save"
                Command="{Binding SaveBtnClickedCommand}"
                BackgroundColor="Green"
                TextColor="White"
                FontAttributes="Bold"
                HorizontalOptions="Fill" />

    </VerticalStackLayout>

</ContentPage>

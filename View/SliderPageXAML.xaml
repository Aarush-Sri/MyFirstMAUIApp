<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMAUIApp.View.SliderPageXAML"
             Title="SliderPageXAML">
    
    <VerticalStackLayout>
        <BoxView x:Name="MyBox"
               WidthRequest="400"
               HeightRequest="50"
               Color="Black"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Margin="0, 0, 0, 0"/>

        <Slider x:Name="MySlider"
          Minimum="0" Maximum="1" Value="1"
          ThumbColor="Black" MaximumTrackColor="Black" MinimumTrackColor="Black"
          HorizontalOptions="Fill"
          ValueChanged="OnSliderValueChanged"/>

        <Label x:Name="ValueLabel" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Label x:Name="InfoLabel" Text="Moving Slider will change opacity" FontAttributes="Bold" FontSize="Medium" TextColor="Black" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>